{
  "name": "vscodeext",
  "displayName": "vscodeExt",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.57.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vscodeext.helloWorld",
    "onCommand:vscodeext.compileJava",
    "onCommand:vscodeext.compileCpp",
    "onCommand:vscodeext.compilePython",
    "onCommand:vscodeext.recommendation"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscodeext.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "vscodeext.compileJava",
        "title": "Compile java",
        "category": "Compile"
      },
      {
        "command": "vscodeext.compileCpp",
        "title": "Compile C++",
        "category": "Compile"
      },
      {
        "command": "vscodeext.compilePython",
        "title": "Compile Python",
        "category": "Compile"
      },
      {
        "command": "vscodeext.recommendation",
        "title": "문제은행 추천받기",
        "category": "문제은행"
      }
    ],
    "menus": {
			"editor/context": [
				{
					"command": "vscodeext.compileJava"
				},
        {
					"command": "vscodeext.compileCpp"
				},
        {
					"command": "vscodeext.compilePython"
				},
        {
					"command": "vscodeext.recommendation"
				}
			]
		}
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "ts-loader": "^9.2.2",
    "typescript": "^4.3.2",
    "universal-lexer": "^2.0.1",
    "vscode-test": "^1.5.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "dependencies": {
    "axios": "^0.21.1"
  }
}
